scalar JSON
scalar Uint

enum TaskType {
  input
  action
}

enum TaskStatus {
  inProgress
  finished
  stopped
  failed
}

type Task {
  id: Uint!
  type: TaskType!
  status: TaskStatus!
  args: JSON!
  results: JSON!
}

type Flow {
  id: Uint!
  tasks: [Task!]!
}

type Query {
  flows: [Flow!]!
}

type Mutation {
  createFlow: Flow!
  createTask(id: Uint!, query: String!): Task!
}

type Subscription {
  taskAdded: Task!
  taskUpdated: Task!
}
